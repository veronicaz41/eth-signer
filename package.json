  "dependencies": {
    "bignumber.js": "debris/bignumber.js#94d7146671b9719e00a09c29b01a691bc85048c2",
    "bitcore-lib": "^0.14.0",
    "bitcore-mnemonic": "^1.2.2",
    "buffer": "^4.9.1",
    "elliptic": "^6.3.1",
    "estraverse": "^4.2.0",
    "ethereumjs-tx": "^1.1.2",
    "ethereumjs-util": "^4.5.0",
    "rlp": "^2.0.0",
    "scrypt-async": "^1.3.0",
    "secp256k1": "^3.2.0",
    "tweetnacl": "0.14.3",
    "tweetnacl-util": "^0.13.3",
    "web3": "^0.15.3"
  },
  "devDependencies": {
    "async": "^1.4.2",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babelify": "^7.3.0",
    "babili": "0.0.7",
    "bluebird": "^3.3.1",
